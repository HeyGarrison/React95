{
  "version": "independent",
  "npmClient": "pnpm",
  "useWorkspaces": true,
  "useNx": true,
  "command": {
    "publish": {
      "conventionalCommits": true,
      "ignoreChanges": [
        "**/*.test.tsx",
        "**/*.md",
        "**/*.json",
        "stories",
        ".storybook",
        "explorer"
      ]
    },
    "version": {
      "conventionalCommits": true,
      "createRelease": "github",
      "message": "chore(release): publish :floppy_disk: :tada: [skip ci]",
      "ignoreChanges": ["explorer"]
    }
  }
}
